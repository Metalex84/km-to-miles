<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/enterKM" />

    <EditText
        android:id="@+id/input_km"
        android:layout_width="370dp"
        android:layout_height="101dp"
        android:layout_below="@id/textView1"
        android:hint="@string/points"
        android:autofillHints="0.000"
        android:inputType="numberDecimal" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/input_km"
        android:layout_marginTop="61dp"
        android:text="@string/enterML" />

    <EditText
        android:id="@+id/input_miles"
        android:layout_width="361dp"
        android:layout_height="84dp"
        android:layout_below="@id/textView2"
        android:layout_marginTop="4dp"
        android:hint="@string/points"
        android:autofillHints="0.000"
        android:inputType="numberDecimal"  />

    <Button
        android:id="@+id/boton_millas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/input_miles"
        android:layout_marginTop="92dp"
        android:text="@string/toMiles" />

    <Button
        android:id="@+id/boton_km"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/boton_millas"
        android:layout_marginStart="120dp"
        android:layout_marginTop="0dp"
        android:layout_toEndOf="@id/boton_millas"
        android:text="@string/toKilometers" />

</RelativeLayout>
